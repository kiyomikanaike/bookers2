<%= render 'books',books: @books %>
<!--部分テンプレ-->
    <div>
     <h2>Book detail</h2>
     <table>

       <% @books.each do |book|%>
         <tr>
          <td><%= image_tag current_user.get_profile_image(100,100) %></td>
          <td><%= link_to(current_user.name,book) %></td>
          <td><%= link_to(book.title,book) %></td>
          <td><%= book.body %></td>
          <td><%= link_to("edit",edit_book) %></td>
          <td><%= link_to 'destroy',book_path(@book.id),method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
         </tr>
       <% end %>
      </table>