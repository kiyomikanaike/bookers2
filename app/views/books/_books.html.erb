
 <h2>User info</h2>
   <%= image_tag current_user.get_profile_image(100,100) %>
   <table>
   <tbody>
    <tr>
     <th>name</th>
     <th><%= current_user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= current_user.introduction %></th>
    </tr>
   </tbody>
   </table>
   <div>
    <p><%= link_to "edit",edit_user_path(@user.id)%></p>

   </div>
   <h1>New book</h1>
    <%= form_with model: @book do |f| %>

     <h4>Title</h4>
      <%= f.text_field :title %>

     <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
    </div>
